[Unit]
Description=add live user and setup sudo and root user env
DefaultDependencies=no
Conflicts=shutdown.target
Before=systemd-user-sessions.service
Requires=fll-live.service
After=fll-live.service home.mount systemd-homed.service

[Service]
Type=oneshot
RemainAfterExit=yes
EnvironmentFile=/etc/default/distro
ExecStart=/usr/share/fll-live-initscripts/fll_homed
Restart=no

[Install]
WantedBy=basic.target
