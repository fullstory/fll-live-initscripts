#!/usr/bin/make -f
  
include /usr/share/cdbs/1/rules/debhelper.mk

install/fll-live-initscripts::
	# live-{reboot,halt} are the same script. duplicate it
	cp debian/fll-live-initscripts.live-reboot.init \
		debian/fll-live-initscripts.live-halt.init
	# install and configure runlevel seq. for our initscripts
	dh_installinit --no-start --name=live-autoconfig	-- start 00 S .
	dh_installinit --no-start --name=live-halt		-- start 90 0 .
	dh_installinit --no-start --name=live-reboot		-- start 90 6 .

clean::
	# clean up duplicated init script
	rm -f debian/fll-live-initscripts.live-halt.init
