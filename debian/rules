#!/usr/bin/make -f

%:
	dh ${@} --parallel --with=systemd

override_dh_installinit:
	dh_installinit --package=fll-live-initscripts --no-start --name=fll-adduser
	dh_installinit --package=fll-live-initscripts --no-start --name=fll-desktop
	dh_installinit --package=fll-live-initscripts --no-start --name=fll-fstab
	dh_installinit --package=fll-live-initscripts --no-start --name=fll-locales
	dh_installinit --package=fll-live-initscripts --no-start --name=fll-nbdclient
	dh_installinit --package=fll-live-initscripts --no-start --name=fll-reboot
	dh_installinit --package=fll-live-initscripts --no-start --name=fll-shell
	dh_installinit --package=fll-live-initscripts --no-start --name=fll-snakeoil-cert
	dh_installinit --package=fll-live-initscripts --no-start --name=fll-xdm
	dh_installinit

override_dh_systemd_enable:
	dh_systemd_enable --package=fll-live-initscripts --name=fll-networkd-one

override_dh_systemd_start:
	dh_systemd_start --package=fll-live-initscripts --no-start fll-networkd-one.service
