[Unit]
Description=add live user using adduser
DefaultDependencies=no
Conflicts=shutdown.target
Before=systemd-user-sessions.service
Requires=fll-live.service
After=fll-live.service home.mount

[Service]
Type=oneshot
RemainAfterExit=yes
EnvironmentFile=/etc/default/distro
ExecStart=/usr/share/fll-live-initscripts/fll_adduser
Restart=no

[Install]
WantedBy=basic.target
